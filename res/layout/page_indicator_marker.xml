<?xml version="1.0" encoding="utf-8"?>
<com.jm.launcher.PageIndicatorMarker xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.jm.launcher"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:layout_gravity="center_vertical" >

    <ImageView
        android:id="@+id/inactive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_pageindicator_default" />

    <ImageView
        android:id="@+id/active"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:scaleType="centerInside"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/ic_pageindicator_current" />

</com.jm.launcher.PageIndicatorMarker>